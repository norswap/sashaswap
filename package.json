{
  "name": "SashaSwap",
  "contributors": ["norswap", "Sasha K"],
  "license": "BSD-3-Clause",
  "version": "1.0.0",
  "description": "Smart Contract starting template",
  "devDependencies": {
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "scripts": {
    "lint": "pnpm prettier && pnpm solhint",
    "lint:check": "pnpm prettier:check && pnpm solhint:check",
    "prettier": "pnpm prettier:check --write",
    "prettier:check": "prettier --check \"src/**/*.sol\"",
    "solhint": "pnpm solhint:check --fix",
    "solhint:check": "solhint --config ./.solhint.json \"src/**/*.sol\""
  }
}
